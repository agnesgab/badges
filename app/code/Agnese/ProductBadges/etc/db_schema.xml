<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="badges" resource="default" engine="innodb"
           comment="Product Badges Table">
        <column xsi:type="int" name="id" unsigned="false" nullable="false" identity="true" comment="Value ID"/>
        <column xsi:type="varchar" name="title" nullable="false" comment="Badge title"/>
        <column xsi:type="varchar" name="image_url" nullable="true" comment="Badge Image URL"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
